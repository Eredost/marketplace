{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}

<h1> Bienvenue chez Cocorico World</h1>


<div class="container-fluid homepagecard">

    {% for producer in producers %}

        <div class="card mr-1" style="width: 18rem;">
            <img src="http://placehold.it/200x200" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ producer.socialReason }}</h5>
                    <p>{{ producer.city }}</p>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                    <p class="card-text">

                    </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <p class="card-text">
                        <h5>Description</h5>
                        {{ producer.description }}
                    </p>
                </li>

            </ul>
            <div class="card-body text-center">
                <a class="btn btn-primary" href="{{ path('producer_show', {'id': producer.id}) }}">Boutique du producteur</a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
