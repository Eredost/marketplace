{% extends 'base.html.twig' %}

{% block title %}My profil {% endblock %}

{% block body %}

{# Condition pour vérifier que le user loggué est bien le titulaire du profil #}
{% if app.user.email == user.email %}


<h1>Profil User</h1>

{# Détails du profil du User loggué #}
<div class="profilblock">
    <p>Username : {{app.user.username}}</p>
    <p>Email : {{app.user.email}}</p>
    <p>Crée le : {{app.user.createdAt | date('d-m-Y')}}</p>
    <p>Mis à jour le : {{app.user.updatedAt | date('d-m-Y')}}</p>
    <p>Prenom : {{app.user.firstname}}</p>
    <p>Nom : {{app.user.lastname}}</p>
    <p>Adresse : {{app.user.address}} - {{app.user.postalCode}} - {{app.user.city}}</p>
    <p>Telephone : {{app.user.telephone}}</p>
    <p>  Droits : 
      {% for role in user.roles %}
      <span> - {{ role }}  </span> 
      {% endfor %}
    </p>
    
    <a href="#" class="btn btn-success"> 
        Modifier mon Profil
        <i class="fas"></i> 
    </a>
    {% else %}
  <p>Vous ne pouvez pas vous connecter à un autre profil que le vôtre voyons !!! Petit voyou !!</p>
{% endif %} 

{% endblock %}
